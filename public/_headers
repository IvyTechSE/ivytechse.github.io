# Cache-Control headers for static assets
# This file works with Netlify and Cloudflare Pages
# Note: Does not work with GitHub Pages (which uses its own CDN caching)

# Cache static images for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache Next.js static files (JS, CSS with content hashes) for 1 year
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache root static assets for 1 day
/favicon.ico
  Cache-Control: public, max-age=86400, must-revalidate

/robots.txt
  Cache-Control: public, max-age=86400, must-revalidate

/sitemap.xml
  Cache-Control: public, max-age=86400, must-revalidate

/feed.xml
  Cache-Control: public, max-age=86400, must-revalidate

# HTML pages should always revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Well-known files cached for 1 hour
/.well-known/*
  Cache-Control: public, max-age=3600, must-revalidate

# Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
